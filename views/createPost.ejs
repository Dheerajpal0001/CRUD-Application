<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini_Project</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Optional: Styling for hidden class */
        .hidden {
            display: none;
        }
    </style>
</head>

<body>
    <div class="w-screen h-screen text-white bg-gray-700 flex flex-col">
        <!-- Header Section -->
        <div class="w-full p-5 mb-3 flex items-center justify-between flex-wrap gap-4">
            <h1 class="text-2xl font-bold">Create Post</h1>
            <!-- Desktop Menu Links -->
            <div class="hidden sm:flex items-center justify-center gap-4 flex-wrap">
                <a href="/home" class="text-lg font-medium">Home</a>
                <a href="/profile" class="text-lg font-medium">Profile</a>
                <a href="/feed" class="text-lg font-medium">Feed</a>
                <a href="/logout" class="bg-blue-700 px-3 py-2 rounded-lg font-semibold">Log Out</a>
            </div>
            <!-- Mobile Menu Button -->
            <div class="sm:hidden flex items-center">
                <button id="menu-button" class="text-lg font-medium">
                    <i class="ri-menu-5-line cursor-pointer"></i>
                </button>
            </div>
        </div>

        <!-- Mobile Navigation Menu -->
        <div id="mobile-menu" class="flex flex-col items-center gap-4 sm:hidden hidden bg-gray-800 p-4">
            <a href="/home" class="text-lg font-medium">Home</a>
            <a href="/profile" class="text-lg font-medium">Profile</a>
            <a href="/feed" class="text-lg font-medium">Feed</a>
            <a href="/logout" class="bg-blue-700 px-3 py-2 rounded-lg font-semibold">Log Out</a>
        </div>

        <!-- Main Content -->
        <div class="flex flex-col items-center p-5 flex-grow">
            <form action="/createPost" method="post" class="flex flex-col gap-4 w-full max-w-lg">
                <div class="flex flex-col gap-2">
                    <label for="title" class="text-lg font-medium">Title</label>
                    <input type="text" name="title" id="title" class="bg-white text-black p-2 rounded-lg">
                </div>
                <div class="flex flex-col gap-2">
                    <label for="desc" class="text-lg font-medium">Description</label>
                    <textarea name="desc" id="desc" class="resize-none bg-white text-black p-2 rounded-lg h-32"></textarea>
                </div>
                <div class="flex flex-col gap-2">
                    <label for="image" class="text-lg font-medium">Image URL</label>
                    <input type="text" name="image" id="image" class="bg-white text-black p-2 rounded-lg">
                </div>
                <button type="submit" class="bg-blue-700 px-4 py-2 rounded-lg text-white font-semibold mt-4">Create Post</button>
            </form>
        </div>
    </div>

    <script>
        // JavaScript to toggle menu visibility
        document.getElementById('menu-button').addEventListener('click', function () {
            var menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });
    </script>
</body>

</html>
